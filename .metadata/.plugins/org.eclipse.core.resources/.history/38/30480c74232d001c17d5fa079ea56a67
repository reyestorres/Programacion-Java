package actividadesAplicacion;

import java.util.Scanner;

public class Actividad3_12 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num=0;
		int binario=0;
		int numDigitos=1;
		Scanner teclado = new Scanner(System.in);
		System.out.println("Introduzca un numero en binario: ");
		 binario = teclado.nextInt();
		while (binario >0 ) {
			double x = binario * 0.1;
			System.out.println(binario);
			System.out.println(x);
			if (x >= 0.1) num = num + (int) (num + Math.pow(2, numDigitos));
			
			numDigitos++;
			binario = (int)x;
		}
		 System.out.println("El resultado es: " +num);
	}

}
