package actividadesPropuestas;

import java.util.Scanner;

public class Actividad1Eva {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*Pedir un numero por teclado y mostrar la lista de todos los multiplos de 7 
		 * menores que dicho numero.
		 * num > 7
		 * do { } while(); 
		 * while() { }; */
		Scanner teclado = new Scanner(System.in);
		int num;
		int resultado;
		int puntero = 0;
		System.out.println("Introduce un numero: ");
		num = teclado.nextInt(); //recorer [0, num] recorrer con while
		do {
			resultado =  num %7;
			if (resultado == 0) System.out.println("El numero" + puntero + "es multiplo de 7");
			puntero++;
		} while(num > puntero);
				
			
	}

}
