package actividadesAplicacion;

import java.util.Scanner;

public class Actividad3_12 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num;
		int binario=0;
		int decimal =0;
		int contador=1;
		Scanner teclado = new Scanner(System.in);
		System.out.println("Introduzca un numero en binario: ");
		 num = teclado.nextInt();
		while (num >0 ) {
			
			if (num ==1) {
				decimal = decimal + (num *2)*contador*10;
				decimal = decimal + (num *2)*contador;
			
			}else
				decimal = decimal + (num *2)*contador;
			contador=contador*10;
			num =  num *2;
		}
		 System.out.println("El resultado es: " +decimal);
	}

}
